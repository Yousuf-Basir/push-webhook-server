{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
    }
  },
  // include "src/**/*.ts" and json files
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules"]
}
